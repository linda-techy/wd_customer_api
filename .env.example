# ============================================
# WD Customer API Environment Configuration
# ============================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8080

# ============================================
# Database Configuration
# ============================================
# IMPORTANT: Use the SAME database as wd_portal_api
DB_URL=jdbc:postgresql://localhost:5432/wdTestDB
DB_USERNAME=postgres
DB_PASSWORD=your-database-password-here

# ============================================
# JWT Configuration
# ============================================
# CRITICAL: Must use the SAME JWT secret as wd_portal_api
# Generate a secure secret key (minimum 32 characters recommended)
# Example: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-here-minimum-32-characters
JWT_ACCESS_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=604800000

# ============================================
# File Storage Configuration
# ============================================
# IMPORTANT: Use the SAME storage path as wd_portal_api for file sharing
STORAGE_BASE_PATH=N:\Projects\wd projects git\storage
