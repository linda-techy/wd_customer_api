# Customer API Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/your_database_name
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_db_password

# JWT Configuration
# Generate a secure secret: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_ACCESS_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=604800000

# File Storage
# Path where uploaded files will be stored
STORAGE_BASE_PATH=/path/to/storage

# Server Configuration (optional)
SERVER_PORT=8080

# Environment-specific settings (optional)
DDL_AUTO=validate
SHOW_SQL=false
ERROR_INCLUDE_MESSAGE=never
LOGGING_LEVEL_SECURITY=INFO
LOGGING_LEVEL_APP=INFO

# Email / SMTP Configuration
# Set EMAIL_ENABLED=true to send real emails; false logs to console (development mode)
EMAIL_ENABLED=false
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
# For Gmail: use an App Password (https://myaccount.google.com/apppasswords)
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# Customer Portal Base URL (used in password reset email links)
# This should be the deep-link base URL registered for the Flutter app
CUSTOMER_PORTAL_BASE_URL=https://app.walldotbuilders.com
