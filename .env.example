# Customer API Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/your_database_name
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_db_password

# JWT Configuration
# Generate a secure secret: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_ACCESS_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=604800000

# File Storage
# Path where uploaded files will be stored
STORAGE_BASE_PATH=/path/to/storage

# Server Configuration (optional)
SERVER_PORT=8080

# Environment-specific settings (optional)
DDL_AUTO=validate
SHOW_SQL=false
ERROR_INCLUDE_MESSAGE=never
LOGGING_LEVEL_SECURITY=INFO
LOGGING_LEVEL_APP=INFO
